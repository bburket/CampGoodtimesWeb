<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/external/jquery")
    @Scripts.Render("~/bundles/external/jqueryui")
    @RenderSection("scripts", required: false)
    @Styles.Render("~/Content/SiteNewCss")
    @Styles.Render("~/Content/css/nivo")
</head>
<body>
<div id="content-container">
    <div id="title-banner">
        <div id="action-banner-positioner">
            <div id="action-nav-title-container">
                <a href="@Url.Action("Index", "Home")"><img src="/Content/images/layout/Goodtimesbanner-new.png" /></a>
            </div>
            <div id="action-nav-menu-container">
                <ul id="action-nav-menu">
                    <li><a href="@Url.Action("Index", "JoinUs")">JOIN US</a></li>
                    <li><a href="@Url.Action("Index", "Volunteer")">VOLUNTEER</a></li>
                    <li><a href="@Url.Action("Index", "Donate")">DONATE</a></li>
                </ul>
            </div>
        </div>
        <div id="info-banner-positioner">
            <div id="info-banner-container">
                <ul id="info-nav-menu">
                    <li><a href="@Url.Action("Index", "WhoWeAre")">WHO WE ARE</a></li>
                    <li><a href="@Url.Action("Index", "WhatWeDo")">WHAT WE DO</a></li>
                    <li><a href="@Url.Action("Index", "News")">NEWS</a></li>
                    <li><a href="@Url.Action("Index", "Connect")">CONNECT</a></li>
                </ul>
            </div>
        </div>
    </div>

    @RenderBody()

    <div id="footer-container">
        <div id="footer-content"><span>(c)2014 TheGoodtimesProject.org</span><span style="margin-left: 30px;">Website by MikeDice.Creative</span></div>
    </div>
</div>
</body>
</html>
